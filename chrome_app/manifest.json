{
  "manifest_version": 2,

  "name": "Lobbyist bio finder (DEV)",
  "description": "An experimental Sunlight Foundation data collection tool for lobbying data",
  "version": "0.1",

  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "app": {
    "background": {
      "scripts": ["js/background.js"]
    }
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "webview",
    "storage"
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:8003/*"
    ]
  }
}
